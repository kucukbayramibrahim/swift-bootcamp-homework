import SwiftUI

struct ProfileView: View {
    
    // Örnek kullanıcı bilgileri
    let fullName: String = "Ibrahim Kucukbayram"
    let shortBio: String = "iOS Developer & Swift Learner"
    let followers: Int = 120
    let following: Int = 75
    let likes: Int = 300
    let aboutMe: String = """
    Hello! I'm Ibrahim, a passionate iOS developer learning SwiftUI. \
    I love building beautiful and functional apps. \
    In my free time, I explore new technologies and practice coding challenges.
    """
    
    var body: some View {
        ScrollView {
            VStack(spacing: 20) {
                
                // Header with gradient
                ZStack {
                    LinearGradient(colors: [Color.blue, Color.purple], startPoint: .topLeading, endPoint: .bottomTrailing)
                        .frame(height: 200)
                        .cornerRadius(20)
                    
                    // Profile Image
                    Image(systemName: "person.circle.fill")
                        .resizable()
                        .frame(width: 100, height: 100)
                        .clipShape(Circle())
                        .overlay(Circle().stroke(Color.white, lineWidth: 4))
                        .shadow(radius: 5)
                        .offset(y: 50)
                }
                .padding(.bottom, 60)
                
                // Name and short bio
                VStack(spacing: 5) {
                    Text(fullName)
                        .font(.title)
                        .fontWeight(.bold)
                    Text(shortBio)
                        .font(.subheadline)
                        .foregroundColor(.gray)
                }
                
                // Info Cards (Followers / Following / Likes)
                HStack(spacing: 15) {
                    infoCard(title: "Followers", value: followers)
                    infoCard(title: "Following", value: following)
                    infoCard(title: "Likes", value: likes)
                }
                .padding(.horizontal)
                
                // About Me Section
                VStack(alignment: .leading, spacing: 10) {
                    Text("About Me")
                        .font(.headline)
                        .bold()
                    
                    Text(aboutMe)
                        .font(.body)
                        .foregroundColor(.gray)
                }
                .padding()
                
                // Buttons
                HStack(spacing: 20) {
                    Button(action: {
                        print("Message sent!")
                    }) {
                        Text("Send Message")
                            .foregroundColor(.white)
                            .padding()
                            .frame(maxWidth: .infinity)
                            .background(Color.blue)
                            .cornerRadius(10)
                    }
                    
                    Button(action: {
                        print("Followed!")
                    }) {
                        Text("Follow")
                            .foregroundColor(.blue)
                            .padding()
                            .frame(maxWidth: .infinity)
                            .background(Color.white)
                            .overlay(
                                RoundedRectangle(cornerRadius: 10)
                                    .stroke(Color.blue, lineWidth: 2)
                            )
                    }
                }
                .padding(.horizontal)
            }
        }
    }
    
    // Helper function for Info Cards
    func infoCard(title: String, value: Int) -> some View {
        VStack {
            Text("\(value)")
                .font(.title2)
                .fontWeight(.bold)
            Text(title)
                .font(.subheadline)
                .foregroundColor(.gray)
        }
        .frame(maxWidth: .infinity)
        .padding()
        .background(Color(UIColor.systemGray6))
        .cornerRadius(10)
    }
}

// Preview
struct ProfileView_Previews: PreviewProvider {
    static var previews: some View {
        ProfileView()
    }
}
