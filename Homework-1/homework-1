import Foundation

// 📝 Homework 1.1 – Variables and Data Types
// Personal Info Card

let fullName: String = "İbrahim Küçükbayram"
let age: Int = 26
let height: Double = 1.70
let isStudent: Bool = false

// Optional variable (hobby)
var hobby: String? = "Learning Swift"

// Safe unwrapping of optional
if let myHobby = hobby {
    print("Hobby: \(myHobby)")
} else {
    print("No hobby provided.")
}

// Print personal info
print("Full Name: \(fullName)")
print("Age: \(age)")
print("Height: \(height) m")
print("Is Student?: \(isStudent ? "Yes" : "No")")

// 🧮 Homework 1.2 – Functions and Closures

// Simple calculator function
func calculator(_ num1: Double, _ num2: Double, operation: String) -> Double? {
    switch operation {
    case "add":
        return num1 + num2
    case "subtract":
        return num1 - num2
    case "multiply":
        return num1 * num2
    case "divide":
        return num2 != 0 ? num1 / num2 : nil
    default:
        return nil
    }
}

// Example usage
if let result = calculator(10, 5, operation: "divide") {
    print("Result: \(result)")
} else {
    print("Invalid operation!")
}

// Closure: filtering and sorting an array
let numbers = [3, 7, 2, 9, 12, 5, 20]

// Filter even numbers
let evenNumbers = numbers.filter { $0 % 2 == 0 }
print("Even Numbers: \(evenNumbers)")

// Sort numbers ascending
let sortedNumbers = numbers.sorted { $0 < $1 }
print("Sorted Numbers: \(sortedNumbers)")
