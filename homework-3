import SwiftUI

struct CounterView: View {
    // @State ile sayaç değişkenimizi tanımlıyoruz
    @State private var counter: Int = 0
    
    var body: some View {
        VStack(spacing: 30) {
            // Başlık
            Text("Sayaç Uygulaması")
                .font(.largeTitle)
                .fontWeight(.bold)
                .foregroundColor(.blue)
            
            // Sayaç değerini gösteren metin
            Text("\(counter)")
                .font(.system(size: 72, weight: .bold))
                .foregroundColor(.primary)
                .padding()
                .frame(width: 200, height: 120)
                .background(Color(UIColor.systemGray6))
                .cornerRadius(15)
            
            // Butonlar
            HStack(spacing: 40) {
                // Azaltma butonu
                Button(action: {
                    counter -= 1
                }) {
                    Image(systemName: "minus")
                        .font(.title)
                        .foregroundColor(.white)
                        .frame(width: 60, height: 60)
                        .background(Color.red)
                        .clipShape(Circle())
                }
                
                // Artırma butonu
                Button(action: {
                    counter += 1
                }) {
                    Image(systemName: "plus")
                        .font(.title)
                        .foregroundColor(.white)
                        .frame(width: 60, height: 60)
                        .background(Color.green)
                        .clipShape(Circle())
                }
            }
            
            // Sıfırlama butonu 
            Button(action: {
                counter = 0
            }) {
                Text("Sıfırla")
                    .font(.headline)
                    .foregroundColor(.white)
                    .padding(.horizontal, 30)
                    .padding(.vertical, 12)
                    .background(Color.orange)
                    .cornerRadius(25)
            }
            .padding(.top, 20)
            
            Spacer()
        }
        .padding()
    }
}

// Preview
struct CounterView_Previews: PreviewProvider {
    static var previews: some View {
        CounterView()
    }
}
